<script>
getLanguage();

$(document).ready(function() {
    getLanguage();
    getLatestannouncements();
    productSelect();
    resetSelector();
});

function getLatestannouncements() {
    var lang = $("html").attr("lang");
    
    $.ajax({
        type: "POST",
        dataType: 'json',
        url: webservice + "GetAnnouncements.json",
        headers: { "authorization": "webkey" }, 
        data: { lang: lang, itemid: "", platform: "web" },
        success: function (response) {
            if(response.status === "SUCCESS") {
                var html = "";
                var atleastoneannouncements = false;
               
                html += '<div id="latestannouncements" style="background: #0B318F">';
                html += '<div class="latestannouncements-frame" style="max-width:1218px;margin:auto;">';
                html += '<table width="100%" style="color: #ffffff;">';
                html += '<tr>';
                html += '<td><div class="latest-announcements-title" data-i18n="[html]lastannouncements.label_lastannouncementsuppercase"></div></td>';
                html += '<td><a href="latest-announcement.jsp"><div class="latestannouncements-desktop-showall" data-i18n="[html]lastannouncements.label_showall"></div></a></td>';
                html += '</tr>';
                html += '</table>';
                html += '<hr class="latestannouncements-title-hr">';
                html += '<span class="row" style="margin: 0px 1px;">';

                var announcementcount = 0;
                
                for(var i=0; i<response.text.length; i++) {
                    if(announcementcount < 2) {
                        html += '<div class="col-md-6" style="padding: 0px;">';
                        html += '<div class="latestannouncements one">';
                        html += '<p class="latestannouncements-date">' + datatimeFormatchangeToCalendar(response.text[i].announcements_datetime) + '</p>';
                        html += '<div class="latestannouncements-desc">' + response.text[i].teaser + '</div>';
                        html += '<div onclick="popupAnnouncements(' + response.text[i].itemid + ')" class="latestannouncements-learnmore"data-i18n="[html]global.learnmore"></div>';
                        html += '<hr class="latestannouncements-hr">';
                        html += '</div>';
                        html += '</div>';
                        atleastoneannouncements = true;
                        
                        announcementcount++;
                    }
                }

                html += '<div class="col-md-3 latestannouncements-mobile-showall" style="padding: 0px;">';
                html += '<button class="btn btn-block phone-insights-viewall-btn" onclick="javascript: window.location.href=\'latest-announcement.jsp\'">SHOW ALL</button>';
                html += '</div>';
                html += '</span>';
                html += '</div>';
                html += '</div>';

                if(atleastoneannouncements == true) {
                    $("#latestannouncements").append(html);
                }
            } else {
                checkSessionExpired(response.replymsg);
                $("#errorModal>div>div>div.modal-body").html(response.replymsg);
                $("#errorModal").modal();
            }
        },
        error: function(XMLHttpRequest) {
            
        },
        complete:function(){
            getLanguage();
            $(".se-pre-con").fadeOut("fast");
        }
    });
}

function popupAnnouncements(itemid) {
    var lang = $("html").attr("lang");
    
    $.ajax({
        type: "POST",
        dataType: 'json',
        url: webservice + "GetAnnouncements.json",
        headers: { "authorization": "webkey" }, 
        data: { lang: lang, itemid: itemid, platform: "web" },
        success: function (response) {
            if(response.status === "SUCCESS") {
                $("#announcementsModal>div>div>div>div>.announcements-modal-date").html(datatimeFormatchangeToCalendar(response.text[0].announcements_datetime));
                $("#announcementsModal>div>div>div>div>.announcements-modal-title").html(response.text[0].teaser);
                $("#announcementsModal>div>div>div>div>.announcements-modal-desc").html(response.text[0].message);
                $("#announcementsModal").modal();
            } else {
                checkSessionExpired(response.replymsg);
                $("#errorModal>div>div>div.modal-body").html(response.replymsg);
                $("#errorModal").modal();
            }
        },
        error: function(XMLHttpRequest) {
            
        },
        complete:function(){
            $(".se-pre-con").fadeOut("fast");
        }
    });
}

function productSelect(){
    var productSelector = $('.product-select').val();
    var countrySelector = $('.country-select').val();
    
    $('.country-select').on('change',function(){
        countrySelector = $(this).val();
        if(countrySelector != 0){
            jumpToOtherPage();
            $('.login-btn').removeClass('custom-disabled');
        }
    });
    
    $('.product-select').on('change', function() {
        productSelector = $(this).val();
        if(productSelector == 2){
            $('.platform-select').val(2);       
            $('.form-group.dropdown-OpenNewAc-menu-Width3 .select-selected').text(i18n.t("header.option_cfdviewpoint"));
            $('.form-group.dropdown-OpenNewAc-menu-Width3 .select-selected').addClass('select-disable-filter');
            $('.form-group.dropdown-OpenNewAc-menu-Width3 .select-items').addClass('select-disable');
        }else if(productSelector == 3){
            $('.platform-select').val(3);
            $('.form-group.dropdown-OpenNewAc-menu-Width3 .select-selected').text(i18n.t("header.option_dw"));
            $('.form-group.dropdown-OpenNewAc-menu-Width3 .select-selected').addClass('select-disable-filter');
            $('.form-group.dropdown-OpenNewAc-menu-Width3 .select-items').addClass('select-disable');
        }else if(productSelector == 4){
            $('.platform-select').val(4);
            $('.form-group.dropdown-OpenNewAc-menu-Width3 .select-selected').text(i18n.t("header.option_fp"));
            $('.form-group.dropdown-OpenNewAc-menu-Width3 .select-selected').addClass('select-disable-filter');
            $('.form-group.dropdown-OpenNewAc-menu-Width3 .select-items').addClass('select-disable');
        }else if(productSelector == 0){

        }else{
            $('.platform-select').val(1);
            $('.form-group.dropdown-OpenNewAc-menu-Width3 .select-selected').text(i18n.t("header.option_cgscimbitrade"));
            $('.form-group.dropdown-OpenNewAc-menu-Width3 .select-selected').addClass('select-disable-filter');
            $('.form-group.dropdown-OpenNewAc-menu-Width3 .select-items').addClass('select-disable');
        }
    }); 
 
}

function resetSelector(){
    $('.login-pop-up').on('click',function(){
        $('.form-group.dropdown-OpenNewAc-menu-Width3 .select-items').removeClass('select-disable');
        $('.form-group.dropdown-OpenNewAc-menu-Width3 .select-selected').removeClass('select-disable-filter');
        $('.form-group.dropdown-OpenNewAc-menu-Width1 .select-items').addClass('select-hide');
        $('.form-group.dropdown-OpenNewAc-menu-Width2 .select-items').addClass('select-hide');
        $('.form-group.dropdown-OpenNewAc-menu-Width3 .select-items').addClass('select-hide');
        $('.country-select').val(0);
        $('.platform-select').val(0);
        $('.product-select').val(0);
        $('.form-group.dropdown-OpenNewAc-menu-Width1 .select-selected').text('Select country');
        $('.form-group.dropdown-OpenNewAc-menu-Width2 .select-selected').text('Select product');
        $('.form-group.dropdown-OpenNewAc-menu-Width3 .select-selected').text('Select platform');
        $('.login-btn').addClass('custom-disabled');

    });
}

function jumpToOtherPage(){
    $('.login-btn').on('click',function(){
        var platformSelector = $('.platform-select').val();
        if($('.country-select').val() == 3){
            if(platformSelector == 2){ 
                window.open('https://cfd.cgs-cimb.com.sg/','_blank');
            }else if(platformSelector == 3){
                window.open('https://www.wealth.cgs-cimb.com.sg/','_blank');
            }else if(platformSelector == 0){

            }else{
                window.open('https://www.itradecimb.com.sg','_blank');
            }
        }else if($('.country-select').val() == 4){
            if(platformSelector == 2){ 
                window.open('https://cfd.cgs-cimb.com.sg/','_blank');
            }else if(platformSelector == 3){
                window.open('https://www.wealth.cgs-cimb.com.sg/','_blank');
            }else if(platformSelector == 0){

            }else{
                window.open('https://www.itradecimb.com.sg','_blank');
            }
        }else{
            
        }
    });
}

function captchaHandler() {
    grecaptcha.reset();
    $("#captchaform").show();
}
   
var checkCaptch = false;
var verifyCallback = function(response) {
    console.log("response" + response);
    if (response == "") {
         checkCaptch = false;
     }
     else {
        checkCaptch = true;
        location.href = $(".mailtoaddress").attr("mailto");
     }
};

function onloadCallback(){
    grecaptcha.render('captcha_element', {
        'sitekey' : '6LdxtdwUAAAAAN2RZ0NnK4xvSeqk-aG6aGLLLFm-',
        'callback':verifyCallback
    }); 
}

function mailToAddress() {
    grecaptcha.reset();
   $("#captchaform").show();
}
</script>

